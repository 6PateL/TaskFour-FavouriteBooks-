@model BookModel

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 p-4 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Favourite Book</h2>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-1"></label>
            <input asp-for="Name"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description"></label>
            <input asp-for="Description"/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Author"></label>
            <input asp-for="Author"/>
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label>Image</label>
            <input asp-for="ImageFile"/>
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button class="btn btn-primary" type="submit">Add Book</button>
                <a asp-controller="Home" asp-action="Index">Back to list</a>
            </div>
        </div>
    </div>
</form>